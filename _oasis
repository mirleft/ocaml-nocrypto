OASISFormat:     0.4
Name:            nocrypto
Version:         0.5.3
Synopsis:        Simple crypto for the modern age
Authors:         David Kaloper <david@numm.org>
Maintainers:     David Kaloper <david@numm.org>
License:         BSD-2-clause
Homepage:        https://github.com/mirleft/ocaml-nocrypto
Plugins:         META (0.4)
BuildTools:      ocamlbuild
OCamlVersion:    >= 4.02.0
PostConfCommand: ./postconf
AlphaFeatures:   ocamlbuild_more_args
Categories:      http://org:mirage
Description:
  A simple cryptographic library.

Flag xen
  Description: Build Xen support
  Default:     false

Flag solo5
  Description: Build Solo5 support
  Default:     false

Flag lwt
  Description: Build Lwt/Unix support
  Default:     true

Flag unix
  Description: Build Unix support
  Default:     true

Flag modernity
  Description: Use CPU extensions (SSE2, AES-NI)
  Default:     true

Flag benchmarks
  Description: Build the benchmark programs
  Default:     false

Library nocrypto
  Path:            src/
  Pack:            true
  Modules:         Uncommon,
                   Base64,
                   Hash,
                   Cipher_stream,
                   Cipher_block,
                   Numeric,
                   Rng,
                   Rsa,
                   Dsa,
                   Dh
  InternalModules: Native,
                   Fortuna,
                   Hmac_drgb,
                   Gcm,
                   Ccm
  CSources:        native/nocrypto.h,
                   native/misc.c,
                   native/hash/stubs.c,
                   native/hash/bitfn.h,
                   native/hash/md5.c,
                   native/hash/md5.h,
                   native/hash/sha1.c,
                   native/hash/sha1.h,
                   native/hash/sha256.c,
                   native/hash/sha256.h,
                   native/hash/sha512.c,
                   native/hash/sha512.h,
                   native/aes/generic.c,
                   native/aes/aesni.c,
                   native/des/generic.c,
                   native/des/generic.h
  BuildDepends:    cstruct (>= 1.6.0), zarith, sexplib, ppx_sexp_conv
  XMETARequires:   cstruct, zarith, sexplib
  XMETAExtraLines: xen_linkopts = "-lnocrypto_xen_stubs"
  ByteOpt:         -w A-4-29-33-40-41-42-43-34-44
  CCOpt:           --std=c99 -Wall -Wextra -Werror -O3
  if flag(modernity) && architecture(amd64)
    CCOpt+: -DACCELERATE -msse2 -maes

Library nocrypto_unix
  Path:          unix/
  Findlibparent: nocrypto
  Findlibname:   unix
  Build$:        flag(unix)
  Modules:       Nocrypto_entropy_unix
  BuildDepends:  nocrypto, unix, bytes

Library nocrypto_lwt
  Path:          lwt/
  Findlibparent: nocrypto
  Findlibname:   lwt
  Build$:        flag(unix) && flag(lwt)
  Modules:       Nocrypto_entropy_lwt
  BuildDepends:  nocrypto, nocrypto.unix, lwt.unix, cstruct.lwt

Library nocrypto_xen
  Path:            xen/
  Findlibparent:   nocrypto
  Findlibname:     xen
  Build$:          flag(xen)
  Modules:         Nocrypto_entropy_mirage
  BuildDepends:    nocrypto, lwt, mirage-entropy-xen
  CSources:        native/nocrypto.h,
                   native/misc.c,
                   native/hash/stubs.c,
                   native/hash/bitfn.h,
                   native/hash/md5.c,
                   native/hash/md5.h,
                   native/hash/sha1.c,
                   native/hash/sha1.h,
                   native/hash/sha256.c,
                   native/hash/sha256.h,
                   native/hash/sha512.c,
                   native/hash/sha512.h,
                   native/aes/generic.c,
                   native/aes/aesni.c,
                   native/des/generic.c,
                   native/des/generic.h
  CCOpt:           --std=c99 -Wall -Wextra -Werror -O3 -DNDEBUG $XEN_CFLAGS
  if flag(modernity) && architecture(amd64)
    CCOpt+: -DACCELERATE -msse2 -maes

Library nocrypto_solo5
  Path:            solo5/
  Findlibparent:   nocrypto
  Findlibname:     solo5
  Build$:          flag(solo5)
  Modules:         Nocrypto_entropy_mirage
  BuildDepends:    nocrypto, lwt, mirage-entropy-solo5
  CSources:        native/nocrypto.h,
